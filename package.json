{
  "name": "pdf-translator",
  "version": "1.0.3",
  "description": "PDF翻译工具",
  "author": {
    "name": "Your Name",
    "email": "your.email@example.com"
  },
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "npm run build:css && electron .",
    "build:css": "tailwindcss -i ./styles/tailwind.css -o ./styles/tailwind.min.css --minify",
    "build:css:watch": "tailwindcss -i ./styles/tailwind.css -o ./styles/tailwind.min.css --watch",
    "build:mac": "npm run build:css && electron-builder --mac",
    "build:win": "npm run build:css && electron-builder --win",
    "build:dir": "npm run build:css && electron-builder --dir"
  },
  "build": {
    "appId": "com.pdf.translator",
    "productName": "PDF翻译工具",
    "asar": true,
    "asarUnpack": [
      "**/*.node",
      "models/**/*",
      "python_env/**/*"
    ],
    "files": [
      "**/*",
      "!python_env{,/**/*}",
      "!models{,/**/*}",
      "!**/__pycache__/**",
      "!**/*.pyc",
      "!**/*.pyo",
      "!**/*.pyd",
      "!**/*.so",
      "!**/*.dylib",
      "!**/.DS_Store",
      "!**/*.app",
      "!**/*.framework"
    ],
    "extraResources": [
      {
        "from": "models",
        "to": "models",
        "filter": [
          "**/*",
          "!.gitkeep"
        ]
      },
      {
        "from": ".",
        "to": ".",
        "filter": [
          "*.py",
          "requirements.txt",
          "download_model.py",
          "main.py",
          "config.json"
        ]
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "artifactName": "${productName}-Windows-${version}-${arch}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "PDF翻译工具"
    },
    "directories": {
      "output": "dist"
    }
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "tailwindcss": "^3.0.0"
  },
  "dependencies": {
    "cross-env": "^7.0.3"
  }
}
