{
  "name": "pdf-translator",
  "version": "1.0.3",
  "description": "PDF翻译工具",
  "author": {
    "name": "Your Name",
    "email": "your.email@example.com"
  },
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "npm run build:css && electron .",
    "build:css": "tailwindcss -i ./styles/tailwind.css -o ./styles/tailwind.min.css --minify",
    "build:css:watch": "tailwindcss -i ./styles/tailwind.css -o ./styles/tailwind.min.css --watch",
    "build:mac": "npm run build:css && electron-builder --mac",
    "build:win": "npm run build:css && cross-env ELECTRON_MIRROR=https://npmmirror.com/mirrors/electron/ ELECTRON_BUILDER_BINARIES_MIRROR=https://npmmirror.com/mirrors/electron-builder-binaries/ ELECTRON_CUSTOM_DIR=28.3.3 ELECTRON_BUILDER_ALLOW_UNRESOLVED_DEPENDENCIES=true electron-builder --win",
    "build:dir": "npm run build:css && electron-builder --dir"
  },
  "build": {
    "appId": "com.pdf.translator",
    "productName": "PDF翻译工具",
    "asar": {
      "smartUnpack": true
    },
    "files": [
      "**/*",
      "!python_env/**/*",
      "!models/**/*",
      "!**/__pycache__/**",
      "!**/*.pyc",
      "!**/*.pyo",
      "!**/*.pyd",
      "!**/*.so",
      "!**/*.dylib",
      "!**/.DS_Store",
      "!**/*.app",
      "!**/*.framework",
      "styles/**/*"
    ],
    "extraResources": [
      {
        "from": "models",
        "to": "app.asar.unpacked/models",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": ".",
        "to": "app.asar.unpacked",
        "filter": [
          "*.py"
        ]
      }
    ],
    "mac": {
      "identity": null,
      "hardenedRuntime": false,
      "gatekeeperAssess": false,
      "category": "public.app-category.utilities",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "build/icon.icns",
      "extendInfo": {
        "NSDocumentsFolderUsageDescription": "请允许访问文档文件夹",
        "NSDownloadsFolderUsageDescription": "请允许访问下载文件夹"
      },
      "extraResources": [
        {
          "from": "python_env/lib/python3.10/encodings",
          "to": "app.asar.unpacked/python_env/Lib/encodings"
        },
        {
          "from": "python_env/lib/python3.10/lib-dynload",
          "to": "app.asar.unpacked/python_env/Lib/lib-dynload"
        },
        {
          "from": "python_env/lib/python3.10/site-packages",
          "to": "app.asar.unpacked/python_env/Lib/site-packages"
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "icon": "build/icon.ico",
      "artifactName": "${productName}-Windows-${version}-${arch}.${ext}",
      "extraResources": [
        {
          "from": "python_env",
          "to": "app.asar.unpacked/python_env",
          "filter": [
            "python.exe",
            "pythonw.exe",
            "Scripts/**/*",
            "Lib/**/*",
            "DLLs/**/*",
            "!**/__pycache__/**",
            "!**/*.pyc",
            "!**/*.pyo",
            "!**/*.pyd",
            "!**/.DS_Store",
            "!**/*.dylib",
            "!**/*.so",
            "!**/*.app",
            "!**/*.framework",
            "!**/*.h",
            "!**/*.a",
            "!**/*.lib"
          ]
        },
        {
          "from": "models",
          "to": "app.asar.unpacked/models",
          "filter": ["**/*"]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "allowElevation": true,
      "runAfterFinish": true,
      "deleteAppDataOnUninstall": true
    },
    "portable": {
      "artifactName": "${productName}-Windows-Portable-${version}-${arch}.${ext}"
    },
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "electronDownload": {
      "mirror": "https://npmmirror.com/mirrors/electron/",
      "customDir": "28.3.3"
    }
  },
  "dependencies": {
    "electron-store": "^8.2.0"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.20",
    "cross-env": "^7.0.3",
    "electron": "28.3.3",
    "electron-builder": "^24.9.1",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.17"
  }
}
