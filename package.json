{
  "name": "pdf-translator",
  "version": "1.0.3",
  "description": "PDF翻译工具",
  "author": {
    "name": "Your Name",
    "email": "your.email@example.com"
  },
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "npm run build:css && electron .",
    "build:css": "tailwindcss -i ./styles/tailwind.css -o ./styles/tailwind.min.css --minify",
    "build:css:watch": "tailwindcss -i ./styles/tailwind.css -o ./styles/tailwind.min.css --watch",
    "build:mac": "npm run build:css && electron-builder --mac",
    "build:win": "npm run build:css && electron-builder --win",
    "build:dir": "npm run build:css && electron-builder --dir"
  },
  "build": {
    "appId": "com.pdf.translator",
    "productName": "PDF翻译工具",
    "asar": true,
    "asarUnpack": [
      "resources/app/**/*",
      "node_modules/electron-store/**/*"
    ],
    "files": [
      "**/*",
      "!python_env{,/**/*}",
      "!models{,/**/*}",
      "!**/__pycache__/**",
      "!**/*.pyc",
      "!**/*.pyo",
      "!**/*.pyd",
      "!**/*.so",
      "!**/*.dylib",
      "!**/.DS_Store",
      "!resources/app/python_env/Lib/site-packages/pip/**/*",
      "!resources/app/python_env/Lib/site-packages/setuptools/**/*"
    ],
    "extraResources": [
      {
        "from": "resources/app",
        "to": "app",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "artifactName": "${productName}-Windows-${version}-${arch}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "PDF翻译工具"
    },
    "directories": {
      "output": "dist",
      "buildResources": "build"
    }
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "tailwindcss": "^3.0.0"
  },
  "dependencies": {
    "cross-env": "^7.0.3",
    "electron-is-dev": "^2.0.0",
    "electron-store": "^8.1.0"
  }
}
