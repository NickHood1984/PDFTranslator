{
  "name": "pdf-translator",
  "version": "1.0.0",
  "description": "PDF翻译工具",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "build:dir": "electron-builder --dir"
  },
  "build": {
    "appId": "com.pdf.translator",
    "productName": "PDF翻译工具",
    "mac": {
      "category": "public.app-category.utilities",
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "zip",
          "arch": ["x64", "arm64"]
        }
      ],
      "icon": "build/icon.icns",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "extendInfo": {
        "NSDocumentsFolderUsageDescription": "请允许访问文档文件夹",
        "NSDownloadsFolderUsageDescription": "请允许访问下载文件夹"
      }
    },
    "win": {
      "target": ["nsis"],
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "files": [
      "**/*",
      "!models/DocLayout-YOLO-DocStructBench-onnx/model.onnx",
      "!python/venv/**/*"
    ],
    "extraResources": [
      {
        "from": "models",
        "to": "models",
        "filter": ["**/*"]
      },
      {
        "from": "/opt/homebrew/anaconda3/envs/pdftranlate",
        "to": "python_env",
        "filter": [
          "**/*",
          "!**/__pycache__/**",
          "!**/*.pyc",
          "!**/*.pyo",
          "!**/*.pyd",
          "!**/*.dist-info/**",
          "!**/*.egg-info/**"
        ]
      }
    ],
    "asar": {
      "smartUnpack": true
    },
    "asarUnpack": [
      "python_env/**/*",
      "models/**/*"
    ],
    "directories": {
      "output": "dist",
      "buildResources": "build"
    }
  },
  "dependencies": {
    "electron-store": "^8.1.0"
  },
  "devDependencies": {
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1"
  }
}
